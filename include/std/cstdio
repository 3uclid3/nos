using ::fputws;

using ::fprintf;
using ::fwrite;

using ::printf;
using ::vprintf;

using ::sprintf;
using ::vsprintf;

using ::snprintf;
using ::vsnprintf;

using ::asprintf;
using ::vasprintf;

using ::fctprintf;
using ::vfctprintf;

